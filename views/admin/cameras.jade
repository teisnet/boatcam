extends ../layout

block navigation
    +breadcrumb('admin')

block content
    .page-header Cameras
    ul
        each camera in cameras
            li(id=camera._id)
                a(href="admin/cameras/#{camera.slug}")
                    .status-indicator
                    = camera.title
    .page-footer
        a.btn.btn-success(href="admin/cameras/new") Opret nyt kamera

block scripts
    script.
        var camerasData =  !{JSON.stringify(cameras, null, 2)}
    script(src="/socket.io/socket.io.js")
    script(src="/javascripts/cameras-page.js")
