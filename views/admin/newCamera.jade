extends ../layout

block content
    +breadcrumb('admin', 'cameras')
    h1 Create new camera
    form
        label Title:
        input(type="text" name="title")
        .clear
        label Slug:
        input(type="text" name="slug")
        .clear
        label Enabled:
        input(type="checkbox" name="enabled")
        .clear
        label Hostname:
        input(type="text" name="hostname")
        .clear
        label Username:
        input(type="text" name="username")
        .clear
        label Password:
        input(type="text" name="password")
        .clear
        label RTMP hostname:
        input(type="text" name="uri")
        .clear
        label ONVIF port:
        input(type="text" name="onvif")
        .clear
        label HTTP port:
        input(type="text" name="http")
        .clear
        input#cameraSubmit.btn.btn-success(type="submit" value="Opret")

block scripts
    script(src="/javascripts/admin/admin-new-camera-page.js")
