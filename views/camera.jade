extends layout

block content
    h1= title
    #player.camera
    div(style="clear: both;")
        p.status
        select#berths
        .btn.btn-success.savecamerapos Gem position
        .btn.btn-success.loadcamerapos Hent position
    div(style="clear: both;")
    .camera-control
        i.fa.fa-chevron-up.fa-3x.up
        i.fa.fa-chevron-left.fa-3x.left
        i.fa.fa-chevron-right.fa-3x.right
        i.fa.fa-chevron-down.fa-3x.down
    .camera-control
        center
            button.btn.btn-primary.stop Stop
        center
            button.btn.btn-primary.zoom-in Zoom ind
        center
            button.btn.btn-primary.zoom-out Zoom ud
