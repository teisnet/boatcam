mixin breadcrumb(...route)
    - var levelNames = { admin: "Admin", berths: "Berths", cameras: "Cameras", profile: "Profile" }
    - var path = "";
    a(href="/") BoatCam
    each level in route
        - path += "/" + level
        | &nbsp;>&nbsp;
        a(href=path)= levelNames[level]
    a.pull-right(href="/profile")= user && user.username
